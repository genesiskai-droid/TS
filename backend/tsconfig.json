{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": false,
    "sourceMap": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "incremental": true,
    "skipLibCheck": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
